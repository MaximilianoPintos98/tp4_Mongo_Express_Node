<%- include ('partials/_header') %>

<div class="col-md-4 container">
    <div class="card">
        <div class="card-boddy">
            <form action="/editar/<%- emp.legajo %>" method="POST">
                <div class="form-group">
                    <label>Legajo</label>
                    <input type="text" name="legajo" class="form-control mb-2" placeholder="Legajo" value="<%- emp.legajo %>">
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" name="nombre" class="form-control mb-2" placeholder="Nombre" value="<%- emp.nombre %>">
                </div>
                <div class="form-group">
                    <label>Apellido</label>
                    <input type="text" name="apellido" class="form-control mb-2" placeholder="Apellido" value="<%- emp.apellido %>">
                </div>
                <div class="form-group">
                    <label>Dni</label>
                    <input type="text" name="dni" class="form-control mb-2" placeholder="Dni" value="<%- emp.dni %>">
                </div>
                <div class="form-group">
                    <label>Sector</label>
                    <input type="text" name="sector" class="form-control mb-2" placeholder="Sector" value="<%- emp.sector %>">
                </div>
                <div class="form-group">
                    <label>Fecha Ingreso</label>
                    <input type="text" name="fechaIngreso" class="form-control mb-2" placeholder="Fecha Ingreso" value="<%- emp.fechaIngreso %>">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-outline-primary ">Actualizar</button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>